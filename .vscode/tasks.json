{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean",
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"'${workspaceFolder}\\builds\\*'",
				"-Recurse",
				"-Force"
			],
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"showReuseMessage": false
			}
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "pdc",
			"args": [
				"-sdkpath",
				"${env:PLAYDATE_SDK_PATH}",
				"'${workspaceFolder}\\source'", // source folder
				// "'${workspaceFolder}/builds/${workspaceFolderBasename}.pdx'" // output file
				"'${workspaceFolder}/builds/UntitledPlaydateGame.pdx'" // output file
			],
			"options": {
				"cwd": "${env:PLAYDATE_SDK_PATH}" // run from sdk folder to ensure imports work
			},
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"showReuseMessage": false
			}
		},
		{
			"label": "Close Existing Sim",
			"type": "shell",
			"command": "${workspaceFolder}\\closeSim.ps1",
			"args": [],
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"showReuseMessage": false
			}
		},
		{
			"label": "Run (Simulator)",
			"type": "shell",
			"command": "${env:PLAYDATE_SDK_PATH}/bin/PlaydateSimulator.exe",
			"args": [
				// "'${workspaceFolder}/builds/${workspaceFolderBasename}.pdx'"
				"'${workspaceFolder}/builds/UntitledPlaydateGame.pdx'"
			],
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"showReuseMessage": false
			}
		},
		{
			"label": "Build and Run (Simulator)",
			"dependsOn": [
				"Clean",
				"Build",
				"Close Existing Sim",
				"Run (Simulator)"
			],
			"dependsOrder": "sequence",
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"showReuseMessage": false
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Test (Simulator)",
			"dependsOn": [
				"Close Existing Sim",
				"Run (Simulator)"
			],
			"dependsOrder": "sequence",
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"showReuseMessage": false
			},
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}